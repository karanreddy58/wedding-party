<file path="src/components/Gallery.jsx">
import React, { useState } from "react";
import { Box, Grid, GridItem, Image, Modal, ModalOverlay, ModalContent, ModalBody, IconButton, Heading } from "@chakra-ui/react";
import { motion } from "framer-motion";
import { AiOutlineClose as CloseIcon } from "react-icons/ai";
import { MdArrowBack as ArrowBackIcon, MdArrowForward as ArrowForwardIcon } from "react-icons/md";

// Dynamically load all images from the gallery folder
const importedImages = import.meta.glob("/src/assets/gallery/*.{jpg,jpeg,png}", { eager: true });
const images = Object.keys(importedImages).map((key) => importedImages[key].default);

const MotionImage = motion(Image);

function GalleryPage() {
  const [isOpen, setIsOpen] = useState(false);
  const [currentIndex, setCurrentIndex] = useState(0);

  const handleOpen = (index) => {
    setCurrentIndex(index);
    setIsOpen(true);
  };

  const handleClose = () => {
    setIsOpen(false);
  };

  const handleNext = () => {
    setCurrentIndex((currentIndex + 1) % images.length);
  };

  const handlePrev = () => {
    setCurrentIndex((currentIndex - 1 + images.length) % images.length);
  };

  return (
    <Box py={[10, 20]} px={[4, 8]} bg="#f9f9f9">
      {/* Page Heading */}
      <Heading
        fontSize={["3xl", "5xl"]}
        textAlign="center"
        mb={8}
        color="#a2b798"
        fontFamily="'Moontime', cursive"
      >
        Moments to Cherish
      </Heading>

      {/* Collage Grid */}
      <Grid
        templateColumns="repeat(auto-fit, minmax(250px, 1fr))" // Dynamic column sizing
        autoRows="200px" // Ensure consistent row heights
        gap={4}
        maxW="1200px"
        mx="auto"
      >
        {images.map((src, index) => (
          <GridItem
            key={index}
            overflow="hidden"
            borderRadius="lg"
            boxShadow="md"
            onClick={() => handleOpen(index)}
            cursor="pointer"
            bg="white" // Subtle background for images
            _hover={{ transform: "scale(1.05)" }}
            transition="all 0.3s ease"
          >
            <MotionImage
              src={src}
              alt={`Gallery image ${index + 1}`}
              objectFit="cover"
              w="100%"
              h="100%"
              initial={{ scale: 1 }}
              whileHover={{ scale: 1.02 }}
              transition="all 0.3s ease"
            />
          </GridItem>
        ))}
      </Grid>

      {/* Lightbox Modal */}
      <Modal isOpen={isOpen} onClose={handleClose} size="4xl">
        <ModalOverlay bg="rgba(0, 0, 0, 0.8)" />
        <ModalContent bg="black" borderRadius="md" shadow="lg">
          <ModalBody display="flex" justifyContent="center" alignItems="center" position="relative" p={6}>
            {/* Close Button */}
            <IconButton
              aria-label="Close"
              icon={<CloseIcon />}
              position="absolute"
              top="10px"
              right="10px"
              onClick={handleClose}
              bg="whiteAlpha.800"
              color="black"
              _hover={{ bg: "white" }}
            />
            {/* Previous Button */}
            <IconButton
              aria-label="Previous"
              icon={<ArrowBackIcon />}
              position="absolute"
              left="10px"
              top="50%"
              transform="translateY(-50%)"
              onClick={handlePrev}
              bg="whiteAlpha.800"
              color="black"
              _hover={{ bg: "white" }}
            />
            {/* Next Button */}
            <IconButton
              aria-label="Next"
              icon={<ArrowForwardIcon />}
              position="absolute"
              right="10px"
              top="50%"
              transform="translateY(-50%)"
              onClick={handleNext}
              bg="whiteAlpha.800"
              color="black"
              _hover={{ bg: "white" }}
            />
            <MotionImage
              src={images[currentIndex]}
              maxH="80vh"
              maxW="100%"
              objectFit="contain"
              borderRadius="lg"
              initial={{ scale: 0.8, opacity: 0 }}
              animate={{ scale: 1, opacity: 1 }}
              exit={{ scale: 0.8, opacity: 0 }}
              transition={{ duration: 0.5 }}
            />
          </ModalBody>
        </ModalContent>
      </Modal>
    </Box>
  );
}

export default GalleryPage;
</file>

